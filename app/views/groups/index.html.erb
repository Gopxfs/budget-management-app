<section>
  <p style="color: green"><%= notice %></p>

  <header>
    <h1>Categories</h1>
  </header>

  <div id="categories">
    <% @groups.each do |group| %>
      <%= render group %>
      <p>
        <%= link_to "Show this group", group %>
      </p>
    <% end %>
  </div>

  <%= link_to "Add a new category", new_group_path %>
</section>
